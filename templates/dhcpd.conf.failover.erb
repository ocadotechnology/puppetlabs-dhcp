# BEGIN DHCP Failover
failover peer "dhcp-failover" {
        <%= @role %>;
        address <%= @address %>;
        port <%= @port %>;
        peer address <%= @peer_address %>;
        peer port <%= @port %>;
        max-response-delay <%= @max_response_delay %>;
        max-unacked-updates <%= @max_unacked_updates %>;
        load balance max seconds <%= @load_balance %>;
<% if @role == "primary" -%>
        mclt <%= @mclt %>;
        split <%= @load_split %>;
<% end -%>
<% if @auto_partner_down -%>
        auto-partner-down <%= @auto_partner_down %>;
<% end -%>
}
# END DHCP Failover
